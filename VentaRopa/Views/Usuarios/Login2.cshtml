@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Login2" method="post">
    <div class="form-group">
        <label for="NombreUsuario" class="control-label">Usuario</label>
        <input type="text" id="NombreUsuario" name="nombreUsuario" class="form-control" />
        @if (ViewBag.ValidationErrors != null && ViewBag.ValidationErrors.nombreUsuario != null)
        {
            <span class="text-danger">@ViewBag.ValidationErrors.nombreUsuario</span>
        }
    </div>
    <div class="form-group">
        <label for="Contraseña" class="control-label">Contraseña</label>
        <input type="password" id="Contraseña" name="contraseña" class="form-control" />
        @if (ViewBag.ValidationErrors != null && ViewBag.ValidationErrors.contraseña != null)
        {
            <span class="text-danger">@ViewBag.ValidationErrors.contraseña</span>
        }
    </div>
    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
    <div>
        <span class="text-danger">@ViewBag.Error</span>
    </div>
</form>