@model Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<h1>@Model.Descripcion</h1>

<div class="card">
    <img src="@Model.Imagen" class="card-img-top" alt="@Model.Descripcion" />
    <div class="card-body">
        <h5 class="card-title">@Model.Descripcion</h5>
        <p class="card-text"><strong>Marca:</strong> @Model.Marca</p>
        <p class="card-text"><strong>Talla:</strong> @Model.Talla</p>
        <p class="card-text"><strong>Precio:</strong> $@Model.Precio</p>
        <p class="card-text"><strong>Stock:</strong> @Model.Stock</p>
    </div>
</div>

<a asp-action="Lista" class="btn btn-secondary">Volver a la lista</a>
